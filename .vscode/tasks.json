{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Clinica Completa",
            "type": "shell",
            "command": "C:\\TDM-GCC-64\\bin\\g++.EXE",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\menu.cpp",
                "${workspaceFolder}\\src\\pacientes.cpp",
                "${workspaceFolder}\\src\\inventario.cpp",
                "${workspaceFolder}\\src\\tratamientos.cpp",
                "${workspaceFolder}\\src\\citas.cpp",
                "-I${workspaceFolder}\\include",
                "-o",
                "${workspaceFolder}\\Clinica_Ratoncito_Perez.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}